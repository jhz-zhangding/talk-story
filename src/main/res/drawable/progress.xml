<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#ffb3b3b3"
                android:centerColor="#ffb3b3b3"
                android:centerY="0.75"
                android:endColor="#ffb3b3b3"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#e8e8e8"
                    android:centerColor="#e8e8e8"
                    android:centerY="0.75"
                    android:endColor="#e8e8e8"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#00cc00"
                    android:centerColor="#00cc00"
                    android:centerY="0.75"
                    android:endColor="#00cc00"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>