<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/recent_story_image"
            android:layout_width="555dp"
            android:layout_height="250dp" />

        <co.songlcy.circleimage.view.CircleImage xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recent_story_author_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="210dp"
            app:imgBorderColor="@color/white"
            app:imgBorderWidth="5dp" />

        <TextView
            android:id="@+id/recent_story_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recent_story_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/recent_story_author_image"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/album_item_teacher_name_color"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/recent_story_title"
        android:layout_width="555dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:minHeight="65dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text=""
        android:textColor="@color/album_item_teacher_name_color"
        android:textSize="22sp" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/language_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:minWidth="450dp" />

</LinearLayout>