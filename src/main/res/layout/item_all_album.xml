<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/all_album_item_image"
        android:layout_width="188dp"
        android:layout_height="188dp" />

    <TextView
        android:id="@+id/all_album_item_name"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minHeight="60dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <co.songlcy.circleimage.view.CircleImage
            android:id="@+id/all_album_item_teacher_image"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/all_album_item_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="@color/base_999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/all_album_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_999"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>