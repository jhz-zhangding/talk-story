<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="#d7d7d7" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text=""
        android:textColor="#BB333333"
        android:textSize="18sp"
        android:maxLines="2"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <co.songlcy.circleimage.view.CircleImage xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/album_author_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:imgBorderColor="@android:color/holo_orange_dark"
            app:imgBorderWidth="1dp" />

        <TextView
            android:id="@+id/album_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#333300"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/album_story_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#BB333333"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>