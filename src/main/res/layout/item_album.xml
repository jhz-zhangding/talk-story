<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="@dimen/album_img_size"
        android:layout_height="@dimen/album_img_size"
        android:background="@drawable/shape_album_bg"

        />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="@dimen/album_img_size"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="68dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="#BB333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/album_author_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/default_image" />

        <TextView
            android:id="@+id/album_author_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/album_item_teacher_name_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/album_story_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/album_item_teacher_name_color"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>